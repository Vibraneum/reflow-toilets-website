# ReFlow Toilets - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Google Analytics 4 Measurement ID
# Get this from Google Analytics > Admin > Data Streams > Your Stream > Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloudinary Configuration (for image CDN)
# Get these from https://cloudinary.com/console
# Recommended: Use the same cloud_name as Ixora Group (dhupieu4x)
CLOUDINARY_CLOUD_NAME=dhupieu4x
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Note: NEXT_PUBLIC_ prefix makes the variable available in the browser
# Variables without this prefix are only available server-side
