  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "cloudinary": "^2.8.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.50.0"
  }
}
