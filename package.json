{
  "name": "reflow-toilets-website",
  "version": "1.0.0",
  "private": true,
  "description": "ReFlow Toilets website - Rebuilt with Next.js",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
